<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bar8</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/bar3</item>
        <item name="android:itemBackground">@color/turuncu</item>


    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_left</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_right</item>
    </style>

    <style name="MyCustomAnimation" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/in_anim</item>
        <item name="android:windowExitAnimation">@anim/out_anim</item>
    </style>

</resources>
